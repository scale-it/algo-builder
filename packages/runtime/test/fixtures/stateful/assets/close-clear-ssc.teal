#pragma version 2
// check if application is being created
// This ssc only allows creator to close out
int 0
txn ApplicationID
==

bz not_creation

// save the creator address to the global state
byte "Creator"
txn Sender
app_global_put
int 1
return

not_creation:
int CloseOut
txn OnCompletion
==
int ClearState
txn OnCompletion
==
||

// finish if not closeOut/Clear call
bz finished

// check if creator is closing out
byte "Creator"
app_global_get
txn Sender
==
bz failed

// update global state before closing out
byte "global-key"
byte "global-val"
app_global_put

finished:
int 1
return

failed:
int 0
return
