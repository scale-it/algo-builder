{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": "src",
    "declaration": true,

    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": [
    "**/node_modules",
    "**/webpack"
  ]
}
